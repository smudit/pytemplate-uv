{
    "project_name": "my-project",
    "project_type": ["lib", "workspace", "service"],
    "description": "A Python project",
    "version": "0.1.0",
    "python_version": "3.11",
    "github": {
        "add_on_github": false,
        "repo_name": "{{ cookiecutter.project_name }}"
    },
    "docker": {
        "docker_image": "{{ cookiecutter.project_type != 'lib' }}",
        "docker_compose": "{{ cookiecutter.project_type == 'service' }}"
    },
    "devcontainer": {
        "add_devcontainer": "{{ cookiecutter.project_type == 'service' }}"
    },
    "service_ports": {
        "ports": ["8000"]
    },
    "_copy_without_render": [
        "*.html",
        "*.js",
        "*.css"
    ]
}