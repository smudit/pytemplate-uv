{
    "project_name": "my-python-project",
    "package_name": "{{cookiecutter.project_name|lower|replace('-', '_')|replace(' ', '_')|replace('.', '_')}}",
    "description": "A Python project template",
    "author": "{{ cookiecutter.get('author', 'Your Name') }}",
    "email": "{{ cookiecutter.get('email', 'your@email.com') }}",
    "github_username": "{{ cookiecutter.get('github_username', 'your_username') }}",
    "python_version": "3.11",
    "primary_port": "8000",
    "include_github_actions": "y",
    "mkdocs": "y",
    "deptry": "y",
    "codecov": "y",
    "coverage": "y",
    "dockerfile": "y",
    "mypy": "y",
    "license": "MIT",
    "envfile": ".env",

    "_skip_if_present": [
        "include_github_actions",
        "mkdocs",
        "deptry",
        "codecov",
        "coverage",
        "dockerfile",
        "mypy",
        "envfile",
        "license",
        "primary_port"
    ]
}